<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" prefHeight="480.0" prefWidth="640.0" style="-fx-border-color: #1174ed; -fx-border-width: 6; -fx-border-radius: 6; -fx-background-color: grey;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="passvault.passvault.controllers.PasswordManagementController">

    <center>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #1174ed;" text="Password Management" />
            <Label style="-fx-font-size: 20; -fx-text-fill: #1174ed; -fx-font-weight: bold;" text="Password Generator" />
            <HBox alignment="CENTER" spacing="10">
                <Label style="-fx-font-weight: bold;" text="Username" />
                <TextField fx:id="passwordUsernameField" prefHeight="25.0" prefWidth="195.0" promptText="Enter username" />
            </HBox>
            <HBox alignment="CENTER" prefHeight="25.0" prefWidth="399.0" spacing="10">
                <Label prefHeight="17.0" prefWidth="82.0" style="-fx-font-weight: bold;" text="Password Size" />
                <TextField fx:id="sizeField" prefHeight="25.0" prefWidth="124.0" promptText="Enter size" />
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Label style="-fx-font-weight: bold;" text="Website" />
                <TextField fx:id="websiteField" prefHeight="25.0" prefWidth="221.0" promptText="Enter website" />
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Label style="-fx-font-weight: bold;" text="User-defined Password" />
                <TextField fx:id="userDefinedPasswordField" prefHeight="25.0" prefWidth="221.0" promptText="Enter your own password" />
            </HBox>
            <Button fx:id="generateButton" alignment="CENTER" style="-fx-background-color: #1174ed; -fx-font-weight: bold; -fx-background-radius: 6;" text="Generate Password" />
            <Label fx:id="passwordLabel" alignment="CENTER" prefHeight="39.0" prefWidth="387.0" style="-fx-font-weight: bold; -fx-background-color: magenta; -fx-background-radius: 6;" text="Generated Password will appear here" />
            <Button fx:id="saveButton" alignment="CENTER" style="-fx-background-color: #1174ed; -fx-font-weight: bold; -fx-background-radius: 6;" text="Save Password" />
            <Button fx:id="viewButton" alignment="CENTER" style="-fx-background-color: #1174ed; -fx-font-weight: bold; -fx-background-radius: 6;" text="View Passwords" />
        </VBox>
    </center>

</BorderPane>