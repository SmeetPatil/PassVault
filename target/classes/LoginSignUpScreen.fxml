<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" prefHeight="490.0" prefWidth="640.0" style="-fx-border-color: #1174ed; -fx-border-width: 6; -fx-border-radius: 6; -fx-background-color: grey;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="passvault.passvault.controllers.LoginController">

  <center>
    <VBox alignment="CENTER" prefHeight="495.0" prefWidth="630.0" spacing="20.0" style="-fx-padding: 20; -fx-background-color: grey;">
       <Label style="-fx-font-size: 36; -fx-text-fill: #1174ed; -fx-font-weight: bold;" text="PassVault" textAlignment="CENTER" textFill="#1174ed" wrapText="true">
            <font>
               <Font name="Lucida Console" size="24.0" />
            </font>
         </Label>
      <!-- Login Section -->
      <Label style="-fx-font-size: 20; -fx-text-fill: #1174ed; -fx-font-weight: bold;" text="Login" textFill="#1174ed" />
      <TextField fx:id="usernameField" promptText="Username" />
      <PasswordField fx:id="passwordField" promptText="Password" />
      <Button fx:id="loginButton" prefHeight="33.0" prefWidth="60.0" style="-fx-background-color: #1174ed; -fx-background-radius: 6; -fx-font-weight: bold;" text="Login" />

      <!-- Sign-up Section -->
      <Label style="-fx-font-size: 20; -fx-text-fill: #1174ed; -fx-font-weight: bold;" text="Sign Up" textFill="#1174ed" />
      <TextField fx:id="signupUsernameField" promptText="Username" />
      <PasswordField fx:id="signupPasswordField" promptText="Password" />
      <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" />
      <Button fx:id="signUpButton" prefHeight="33.0" prefWidth="68.0" style="-fx-background-color: #1174ed; -fx-background-radius: 6; -fx-font-weight: bold;" text="Sign Up" />
    </VBox>
  </center>

</BorderPane>
